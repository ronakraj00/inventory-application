extends layout 
block content 
    h1=title 
    form(method="POST",action="")
        label(for="name") Name 
            br
            input(id="name",type="text",name="name" maxlength=100 minlength=1)
        br
        label(for="description") Description 
            br
            input(id="description" type="text",name="description" maxlength=500)
        br
        input(type="submit")
    if errors
        each error in errors 
            li(style="color:red")=error.msg