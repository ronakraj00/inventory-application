extends layout

block content
  h1="Browse " +title
  a(href="collection/create" class="create") Create a new Collection
  if allCollections.length==0
    p Nothing Here
  else 
    ul(style="margin:0px;padding:0px",class="collections")
      each collection in allCollections
        li(style="list-style:none;margin-top:20px;min-width:250px;border-radius:16px" class="card")
          div
            a(href=collection.url,style="font-size:26px")=collection.name 
            p=collection.description
            p=collection.createdAt_formatted
            if(user)
              a(href=`collection/delete/${collection._id}`,class="delete") delete